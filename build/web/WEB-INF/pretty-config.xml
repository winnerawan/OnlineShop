<pretty-config xmlns="http://ocpsoft.org/schema/rewrite-config-prettyfaces" 
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
  xsi:schemaLocation="http://ocpsoft.org/schema/rewrite-config-prettyfaces
                      http://ocpsoft.org/xml/ns/prettyfaces/rewrite-config-prettyfaces.xsd">

	<url-mapping id="index">
		<pattern value="/" />
		<view-id value="/index.xhtml" />
	</url-mapping>  
          
        <url-mapping id="catdetails">
            <pattern value="/category/#{displayProduct.param}"/>
            <view-id value="/catdetails.xhtml"/>
        </url-mapping>  
          
        <url-mapping id="cart">
		<pattern value="/cart/" />
		<view-id value="/cart.xhtml" />
	</url-mapping>
        
        <url-mapping id="login">
		<pattern value="/login" />
		<view-id value="/login.xhtml" />
	</url-mapping>        
        <!--<url-mapping id="checkout">
		<pattern value="/cart/" />
		<view-id value="/checkout.xhtml" />
	</url-mapping>-->
        <url-mapping id="notfound">
		<pattern value="/notfound" />
		<view-id value="/404.xhtml" />
	</url-mapping>
        <url-mapping id="products">
		<pattern value="/products/#{displayProduct.param}" />
		<view-id value="/product.xhtml" />
	</url-mapping>
</pretty-config>